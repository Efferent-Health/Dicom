{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Bundler",

    "rootDir": "src",
    "outDir": "dist/node/esm",

    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,

    "lib": ["ES2020","DOM"],
    "types": ["node"],
    "skipLibCheck": true,
    "strict": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}